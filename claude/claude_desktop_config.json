{
  "mcpServers": {
    "filesystem": {
      "command": "$HOME/.anyenv/envs/nodenv/shims/npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "$HOME/MCP",
        "$HOME/Code"
      ]
    },
    "git": {
      "command": "$HOME/.anyenv/envs/pyenv/shims/uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "$HOME/Code/pointsystem-poc"
      ]
    },
    "fetch": {
      "command": "$HOME/.anyenv/envs/pyenv/shims/uvx",
      "args": ["mcp-server-fetch"]
    },
    "puppeteer": {
      "command": "$HOME/.anyenv/envs/nodenv/shims/npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "github": {
      "command": "$HOME/.anyenv/envs/nodenv/shims/npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_TOKEN"
      }
    }
  }
}
