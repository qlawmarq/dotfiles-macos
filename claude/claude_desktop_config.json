{
  "mcpServers": {
    "filesystem": {
      "command": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin/npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "$HOME/Codes"],
      "env": {
        "PATH": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    },
    "fetch": {
      "command": "$HOME/.local/share/mise/installs/python/$PYTHON_VERSION/bin/uvx",
      "args": ["mcp-server-fetch"],
      "env": {
        "PATH": "$HOME/.local/share/mise/installs/python/$PYTHON_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    },
    "puppeteer": {
      "command": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin/npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "env": {
        "PATH": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_TOKEN"
      }
    },
    "brave-search": {
      "command": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin/npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "$BRAVE_API_KEY",
        "PATH": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    },
    "context7": {
      "command": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin/npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "PATH": "$HOME/.local/share/mise/installs/node/$NODE_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    },
    "markitdown": {
      "command": "$HOME/.local/share/mise/installs/python/$PYTHON_VERSION/bin/uv",
      "args": ["tool", "run", "markitdown-mcp"],
      "env": {
        "PATH": "$HOME/.local/share/mise/installs/python/$PYTHON_VERSION/bin:/usr/local/bin:/usr/bin:/bin"
      }
    }
  }
}
